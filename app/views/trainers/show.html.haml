%p#notice= notice
%h1 Trainers details
%br
= image_tag @trainer.photo.url, :alt => @trainer.first_name, html: {:width => 100, :height => 100}
%br
= image_tag @trainer.address_proof.url, :alt => @trainer.address_proof, html: {:width => 100, :height => 100}

%br
= image_tag @trainer.qualification.url, :alt => @trainer.qualification, html: {:width => 100, :height => 100}
%br
%h2 Personal information
%table.table
  %tr
    %th Full name
    %th Mobile number
    %th Date Of Birth
    %th Email    
  %tr
    %td= @trainer.first_name  +  " "  +  @trainer.last_name
    %td= @trainer.mobile_number
    %td= @trainer.date_of_birth
    %td= @trainer.email

%h2 Address information
%table.table
  %tr
    %th Address line1
    %th Address line2
    %th Location
    %th Country
    %th Pin code
  %tr
    %td= @trainer.address_line1
    %td= @trainer.address_line2
    %td= @trainer.city.name + " " + @trainer.state.name
    %td= @trainer.country.name
    %td= @trainer.zip_code

%br
= link_to '<button type ="button">Back</button>'.html_safe, trainers_path
