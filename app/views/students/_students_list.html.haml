%table.table
  %tr
    %th Select students
    %th Full name
    %th

  - @students.each do |student|
    %tr
      %td= check_box_tag "students[]", student.id
      %td= student.first_name + " " + student.last_name
      %td= link_to "Show Details", student_path(student)

      %td= link_to 'Edit', edit_student_path(student)
    - if student.ban == true
    - else
      %td= link_to "Create ban this student", banmultiple_path(student), method: :put

    = submit_tag "delete selected"
