= simple_nested_form_for @student, :html => { :multipart => true} do |f|
  = f.error_notification

  .form-inputs
    = f.input :first_name
    = f.input :middle_name
    = f.input :last_name 
    = f.input :email
    = f.input :mobile
    = f.input :alternate_mobile
    = f.input :address_line1
    = f.input :address_line2
    = f.input :country_id, :collection => @countries.map{|i| [i.name, i.id]}, label: "Country", :default => @countries.map{|i| [i.name, i.id]}
    = f.input :state_id, :collection => @states.map{|i| [i.name, i.id]}, label: "State", input_html: { class: 'state' }
    = f.input :city_id, :collection => @cities.map{|i| [i.name, i.id]}, label: "City"
    = f.input :zip_code
    = f.input :qualifies_with, collection:['Previous grade clearance', 'Entrance test clearance'], as: :radio_buttons
    = f.input :enrollment_date, :as => :datepicker, :readonly => true
    = f.input :sponsor, :as => :boolean
    = f.file_field :photo

  .form-actions
    = f.button :submit



  