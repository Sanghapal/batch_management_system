
= render 'header'
%h1 Showing batches
= form_tag multipledelete_batches_path, method: :delete do

  %table
    %tr
      %th Select Batches
      %th Batch Title
      %th
      %th
    - @batches.each do |batch|
      %tr
        %td= check_box_tag "batches[]", batch.id

        %td= batch.title
        %td= link_to 'Show details', batch_path(batch)
        %td= link_to 'Edit', edit_batch_path(batch)
    = submit_tag "Delete multiple batches"

%br


= link_to 'New Batch', new_batch_path
= link_to 'Home', root_path